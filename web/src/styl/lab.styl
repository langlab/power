


.lab-view

  .accordion-group

    .accordion-heading
      a
        color #333

  .accordion-group.open

    border 1px solid #d8a3ff

    a
      color #d8a3ff

  .accordion-group.viz

    box-shadow 0px 0px 10px #beffc0
  
  margin-top 60px


  .btn.box
    border none
    background-color none
    background-image none
    background-gradient none
    opacity 0.5
    padding 2px

  .btn.box.active
    opacity 1
    text-shadow 0px 0px 15px green

  .icon-heart
    color #310000

  .icon-heart.online
    color red
    text-shadow 0px 0px 8px red

  .lab-wb-a, .lab-wb-b
    background-color #eee

  .wb-cont
    padding 2px


  .thumbnails
    max-height 300px
    overflow-y auto

  .media-cont

    video, audio, img
      width 100%


  

  .wb-body
    background-color white
    padding 4px

  .editor-area
    min-height 400px
    padding 8px

  .slider-cont
    width 100%
    height 18px
    -webkit-user-select: none

    .slider-groove
      position relative
      left 0px
      right 0px
      height 50%
      border 1px solid #333
      border-radius 4px
      background-color #ccc

    .slider-handle
      position absolute
      cursor ew-resize
      top 0px
      bottom 0px
      width 8px
      z-index 8000
      border-radius 8px
      background-color #333
      border 1px solid #333

  .lab-file-list

    border-top: 1px solid #eee
    border-bottom: 1px solid #333
    background-color white
    padding 6px

    .thumbnail
      background-color white

    .lab-file
      height 110px
      background-color white

      img
        max-height 75px

      .caption
        text-align center


