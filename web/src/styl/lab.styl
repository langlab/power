


.lab-view

  margin-top 60px


  .lab-settings

    .act-tags-cont
      margin-top 10px

  .accordion-group


    .collapse.in
      .media-cont
        opacity 0.4
        background-color rgba(0,0,0,0.01)

    .collapse
      .media-cont
        opacity 1
        background-color rgba(0,0,0,0.01)

    .accordion-heading
      background-color rgba(0,0,0,0.02)
      a
        color #333

      .navbar-search .search-query
        font-size 11px
        padding 0px 10px

  .accordion-group.visible

    border 1px solid #d8a3ff
    box-shadow 0px 0px 10px #d8a3ff

    .collapse
      .media-cont
        opacity 1

    .collapse.in
      .media-cont
        opacity 1

  .lab-recorder-cont

    .accordion-inner
      min-height 160px

    .accordion-body.in
      overflow: visible

    .pause-vid
      font-size: 10px
      padding 0px
      margin 0px

    input.question-label
      font-size 12px
      line-height 1.4


  .lab-students-cont

    .need-help
      color red
      text-shadow 0px 0px 6px red


    .lab-student-list
      margin-top 20px

      .lab-student
        .online-status
          color #310000

      .lab-student.online

        .online-status
          color red
          text-shadow 0px 0px 6px red

      .lab-student.online.help
        background-color rgba(255,0,0,0.1)

        .online-status
          color red
          text-shadow 0px 0px 8px red

        

    .accordion-inner
      min-height 350px


    select
      font-size 10px
      height 20px
  
  


  .btn.box
    border none
    background-color none
    background-image none
    background-gradient none
    opacity 0.5
    padding 2px

  .btn.box.active
    opacity 1
    text-shadow 0px 0px 15px green

  

  .lab-wb-a, .lab-wb-b
    background-color #eee

  .wb-cont
    padding 2px




  .media-player
    .controls-cont
      height 34px

  .media-cont




    video, audio, img
      width 100%

    video.audio-type
      height 0px
      width 0px

    .media.hid
      display none

    

    .scrubber-cont
      margin-top 10px
  

  .wb-body
    background-color white
    padding 4px

  .editor-area
    min-height 300px
    margin-top 30px
    border 1px solid #eee
    padding 8px
    opacity 0.6

  .editor-area.visible
    opacity 1

  .slider-cont
    width 100%
    height 18px
    -webkit-user-select: none

    .slider-groove
      position relative
      left 0px
      right 0px
      height 50%
      border 1px solid #333
      border-radius 4px
      background-color #ccc

    .slider-handle
      position absolute
      cursor ew-resize
      top 0px
      bottom 0px
      width 8px
      //z-index 8000
      border-radius 8px
      background-color #333
      border 1px solid #333

  .lab-file-list

    max-height 300px
    overflow-y auto

    border-top: 1px solid #eee
    border-bottom: 1px solid #eee
    background-color white
    padding 0px



    .thumbnail
      background-color white

    .lab-file
      background-color white

      img
        max-height 75px

      .caption
        text-align center







